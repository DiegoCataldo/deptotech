{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <div class="alert-container">
    {{error}}
    <button type="button" id="alertbutton" class="close alert" aria-label="Close"> <span aria-hidden="true">&times;</span></button>
  </div>
</div>
{{/if}}

{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
   <div class="alert-container">
  {{text}}
  <button type="button" id="alertbutton" class="close alert" aria-label="Close"> <span aria-hidden="true">&times;</span></button>
</div>
</div>
{{/each}}