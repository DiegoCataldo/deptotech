<!-- Search form -->
<div class="row card border-card">
  <!--  HEADEER --->
  <div class="banner-question u-section-2">
    <h3 class="u-heading-font u-text u-text-palette-1-base u-text-1">SUPERADMIN</h3>
    <h2 class="u-heading-font u-text u-text-2">ADMINISTRAR EDIFICIOS</h2>
    <div class="u-border-3 u-border-palette-1-base u-line u-line-horizontal u-line-1"></div>
  </div>
  <!-- /HEADER -->

  <div class="tm-main row justify-content-md-center margin-x-0 mt-5 ">

    <div class="col-md-7">
      <div class="col-12" style="text-align: center;">
        <button class="cta-btn-main-2 utton-question-table" data-toggle="modal"
          data-target="#modal-add-edificio">AGREGAR
          EDIFICIO</button>
      </div>
      <div class="row  table-responsive">
        <table id="example" class="table table-answers table-striped table-bordered table-answers" style="width:100%">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Dirección</th>
              <th>Contraseña Residentes</th>
              <th>Contraseña Administradores</th>
              <th>Torres</th>
              <th>Modificar</th>
              <th>Eliminar</th>
            </tr>
          </thead>
          <tbody>
            {{#each edificios}}
            <tr>
              <td class="table-answers-qtitle">{{nombre}} </td>
              <td class="table-answers-qtitle">{{direccion}} </td>
              <td class="table-answers-qtitle">{{password_residentes}} </td>
              <td class="table-answers-qtitle">{{password_administradores}} </td>
              <td><a href="/superadmin/alltorres/{{_id}}"><button class="button-question-table">
                    <div class="icon"><i class="ion-clipboard" style="font-size: 25px;"></i></div>
                  </button></a>
              </td>
              <td>
                <button class="button-question-table" data-toggle="modal" data-target="#modal-modificar-{{_id}}">
                  <div class="icon"><i class="far fa-edit" style="font-size: 22px;"></i></div>
                </button>
                <!----------------------- MODAL MODIFICAR EDIFICIO ------------->
                <div class="modal fade " id="modal-modificar-{{_id}}" tabindex="-1" role="dialog"
                  aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered  modal-lg " role="dialog">
                    <div class="modal-content ">
                      <div class="modal-header ">
                        <h5 class="modal-title" id="exampleModalLabel" style="">Modificar Edificio</h5>
                        <button id="close-best-answer" type="button" class="close" data-dismiss="modal"
                          aria-label="Close">
                          <span style="" aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body modal-1 row" style="padding: 0.5rem 0rem 0rem 0rem; ">
                        <div class="col-md-12">
                          <fieldset class="fieldset-question" style="width: 100%; margin-left:0px;">
                            <legend class="legend-question">Modificar Edificio a {{nombre}}</legend>
                            <div class="card-body offset-1 col-md-10">
                              <form action="/superadmin/edificios/modificar/" method="POST"
                                enctype="multipart/form-data">
                                <div class="">
                                  <div class="mt-3">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" id="nombre" name="nombre" class="form-control"
                                      placeholder="Nombre" maxlength="100" value="{{nombre}}" required="required" autofocus>
                                    <small id="emailHelp" class="form-text text-muted">Escribe el nombre nombre del
                                      edificio.</small>
                                  </div>
                                  <div class="mt-3">
                                    <label for="nombre">Dirección</label>
                                    <input type="text" id="direccion" name="direccion" class="form-control"
                                      placeholder="Nombre" maxlength="100" value="{{direccion}}" required="required" autofocus>
                                    <small id="emailHelp" class="form-text text-muted">Escribe la dirección.</small>
                                  </div>
                                  <div class="mt-3">
                                    <label for="nombre">Contraseña Residentes</label>
                                    <input type="text" id="password_residentes" name="password_residentes" class="form-control"
                                      placeholder="Contraseña residentes" maxlength="100" value="{{password_residentes}}" required="required" autofocus>
                                    <small id="emailHelp" class="form-text text-muted">Escribe la contraseña de los residentes.</small>
                                  </div>
                                  <div class="mt-3">
                                    <label for="nombre">Contraseña Administradores</label>
                                    <input type="text" id="password_administradores" name="password_administradores" class="form-control"
                                      placeholder="Contraseña administradores" maxlength="100" value="{{password_residentes}}" required="required" autofocus>
                                    <small id="emailHelp" class="form-text text-muted">Escriba la contraseña de los administradores.</small>
                                  </div>
                                </div>
                                <input type="hidden" id="id_edificio" name="id_edificio" class="form-control"
                                  placeholder="Nombre" maxlength="100" value="{{_id}}" required="required">
                                <div class="mt-1 container-button">
                                  <button class="button-main-1" type="submit"> Guardar </button>
                                </div>
                              </form>
                            </div>
                          </fieldset>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!----------------------- END MODAL MODIFICAR EDIFICIO ------------->
              </td>
              <td>
                <button class="button-question-table-2" data-toggle="modal" data-target="#modal-eliminar-{{_id}}">
                  <div class="icon"><i class="fa fa-trash" style="font-size: 20px;"></i></div>
                </button>
                <!----------------------- MODAL DE CONFIRMACIÓN ELIMINACIÓN ---->
                <div class="modal fade" id="modal-eliminar-{{_id}}" tabindex="-1" role="dialog"
                  aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"> IMPORTANTE!</h5>
                        <button id="close-best-answer" type="button" class="close" data-dismiss="modal"
                          aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <h5>
                          ¿Esta seguro que desea eliminar este edificio?
                        </h5>
                        <div class="modal-footer">
                          <button type="button" id="close-best-answer1" class="btn btn-secondary"
                            data-dismiss="modal">Close</button>
                          <a href="/superadmin/edificios/delete/{{_id}}"> <button
                              class="btn btn-danger"> Eliminar
                            </button>
                          </a>
                        </div>
                      </div>

                    </div>
                  </div>
                </div>
                <!---------------------- END MODAL DE CONFIRMACIÓN  ELIMINACIÓN---->
              </td>

            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!----------------------- MODAL AGREGAR EDIFICIO ------------->
<div class="modal fade " id="modal-add-edificio" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered  modal-lg " role="dialog">
    <div class="modal-content ">
      <div class="modal-header ">
        <h5 class="modal-title" id="exampleModalLabel" style="">Agregar edificio</h5>
        <button id="close-best-answer" type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span style="" aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body modal-1 row" style="padding: 0.5rem 0rem 0rem 0rem; ">
        <div class="col-md-12">
          <fieldset class="fieldset-question" style="width: 100%; margin-left:0px;">
            <legend class="legend-question">Nuevo Edificio</legend>
            <div class="card-body offset-1 col-md-10">
              <form action="/superadmin/addedificio" method="POST" enctype="multipart/form-data">
                <div class="">
                  <div class="mt-3">
                    <label for="nombre">Nombre</label>
                    <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Nombre"
                      maxlength="100" value="" required="required" autofocus>
                    <small id="emailHelp" class="form-text text-muted">Escribe el nombre del edificio o
                      condominio.</small>
                  </div>
                  <div class="mt-3">
                    <label for="direccion">Dirección</label>
                    <input type="text" id="direccion" name="direccion" class="form-control" placeholder="Dirección"
                      maxlength="100" value="" required="required" autofocus>
                    <small id="emailHelp" class="form-text text-muted">Escribe la dirección del edificio o
                      condominio</small>
                  </div>
                  <div class="mt-3">
                    <label for="password_administradores">Contraseña Administradores</label>
                    <input type="text" id="password_administradores" name="password_administradores"
                      class="form-control" placeholder="Contraseña Administradores" maxlength="100" value=""
                      required="required" autofocus>
                    <small id="emailHelp" class="form-text text-muted">Escribe la dirección del edificio o
                      condominio</small>
                  </div>
                  <div class="mt-3">
                    <label for="password_residentes">Contraseña Residentes</label>
                    <input type="text" id="password_residentes" name="password_residentes" class="form-control"
                      placeholder="Contraseña residentes" maxlength="100" value="" required="required" autofocus>
                    <small id="emailHelp" class="form-text text-muted">Escribe la dirección del edificio o
                      condominio </small>
                  </div>
                </div>
                <div class="mt-1 container-button">
                  <button class="button-main-1" type="submit"> Guardar </button>
                </div>
              </form>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>