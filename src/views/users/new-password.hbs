<div class="row height100">
  <div class="card card-question border-card">
    <div class="banner-question u-section-2">
      <h3 class="u-heading-font u-text u-text-palette-1-base u-text-1">PORTAFOLIO</h3>
      <h2 class="u-heading-font u-text u-text-2">PROYECTOS RECIENTES</h2>
      <div class="u-border-3 u-border-palette-1-base u-line u-line-horizontal u-line-1"></div>
    </div>
    <br>
      {{> errors}}

    <fieldset class="fieldset-question">
      <legend class="legend-question">Reservation Details</legend>
      <div class="card-body">
        <form action="/users/newpassword?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="mt-3">
            <label for="currentpassword">Current Password</label>
            <input type="password" id="currentpassword" name="currentpassword" class="form-control" placeholder="Current Password" value=""
              autofocus>
            <small id="emailHelp" class="form-text text-muted">Enter your current password.</small>
          </div>
          <div class="mt-3">
            <label for="newpassword">New Password</label>
            <input type="password" id="newpassword" name="newpassword" class="form-control" placeholder="New Password" value=""
              autofocus>
            <small id="emailHelp" class="form-text text-muted">Enter your new password.</small>
          </div>
          <div class="mt-3">
            <label for="confirmpassword">Confirm New Password</label>
            <input type="password" id="confirmpassword" name="confirmpassword" class="form-control" placeholder="Confirm Password" value=""
              autofocus>
            <small id="emailHelp" class="form-text text-muted">Enter your new password again.</small>
          </div>
          <div class="mt-3 container-button">
            <button class="button-main-1 mt-5" type="submit"> Save </button>
          </div>

        </form>
      </div>
    </fieldset>
  </div>
  </div>
  